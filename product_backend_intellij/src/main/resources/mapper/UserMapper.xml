<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTDMapper3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.UserMapper">


    <!-- 해당 유저 정보 출력 -->
    <select id="UserByID" resultType="com.example.demo.vo.UserVO" parameterType="String">
        SELECT * FROM cos_user WHERE user_email = #{user_email}
    </select>

    <!-- 해당 유저의 배송지 리스트 출력 -->
    <select id="UserAddressList" resultType="com.example.demo.vo.UserVO" parameterType="String">
        select * from cos_address where user_email = #{user_email}
    </select>

    <!-- 해당 유저의 정보 변경 -->
    <update id="UpdateUserInfo" parameterType="com.example.demo.vo.UserVO">
        update cos_user
        <trim prefix="set" suffixOverrides=",">
            <if test="change_email != null">
                user_email = #{change_email},
            </if>
            <if test="change_phone != null">
                user_phone = #{change_phone},
            </if>
            <if test="change_password != null">
                user_password = #{change_password},
            </if>
        </trim>
        where user_email = #{user_email}
    </update>
</mapper>